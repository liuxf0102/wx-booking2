<view class="page">

  <view class="weui-cells__title">输入备注</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="备注只有自己可见" value="{{booking.memo1}}" maxlength="{{memo1Max}}" style="height: 3.3em" bindinput='inputMemo1' />
        <view class="weui-textarea-counter">{{memo1Length}}/{{memo1Max}}</view>
      </view>
    </view>
  </view>


  <view class="view-center-padding">
    <button type="primary" disabled="{{!(buttonIsReady)}}" bindtap="bindUpdateMemo1">更新备注</button>
  </view>


</view>